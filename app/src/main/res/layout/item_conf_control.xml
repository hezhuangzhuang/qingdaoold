<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:background="@color/color_999">

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:src="@mipmap/ic_no_login_select"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_head_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_check"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_watch_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@id/ll_master_control"
        android:padding="10dp"
        android:src="@mipmap/ic_watch_site_false" />

    <LinearLayout
        android:id="@+id/ll_master_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/iv_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/iv_mic"
            android:padding="10dp"
            android:src="@mipmap/ic_control_broadcast" />

        <ImageView
            android:id="@+id/iv_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/iv_louder"
            android:padding="10dp"
            android:src="@mipmap/icon_mic" />

        <ImageView
            android:id="@+id/iv_louder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/iv_hangup"
            android:padding="10dp"
            android:src="@mipmap/ic_louder_open" />

        <ImageView
            android:id="@+id/iv_hangup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:padding="10dp"
            android:src="@mipmap/ic_control_hangup" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_watch_site"
        android:layout_toRightOf="@id/iv_head_portrait"
        android:maxLines="2"
        android:paddingLeft="6dp"
        android:ellipsize="end"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="#333"
        tools:text="名称名称名称名称名称名名称名称名称名称名称名称名称名名称名称名称名称名称名称名称名名称名称" />

    <View
        android:id="@+id/view_split"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_name"
        android:background="@color/color_444" />

</RelativeLayout>