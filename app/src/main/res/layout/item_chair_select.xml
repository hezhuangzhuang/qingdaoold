<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/recovery_default_margin_8dp">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_personal_head_one" />

    <TextView
        android:id="@+id/tv_setChair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_head"
        android:layout_alignBottom="@id/iv_head"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="设为主席"
        android:textColor="#ff418ad5"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/tv_setChair"
        android:layout_toRightOf="@id/iv_head"
        android:text="姓名"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/iv_head"
        android:layout_marginTop="8dp"
        android:background="@color/color_444" />

</RelativeLayout>
